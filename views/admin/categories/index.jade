doctype html
html(lang="en")
  head
    include ../../includes/head_content.jade
    link(rel="stylesheet", href="/stylesheets/main.css")
    title Category
  body 
    include ../../includes/navbar_content.jade
    div(class="parent mt-10")
      div(class="container")
        include ../../includes/admin_nav.jade
        div(class="flex justify-between items-center")
          span(class="text-xs text-gray-400 font-semibold tracking-wider") All Categories
          button(id="newCateButton" class="py-2 px-4 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-700 focus:outline-none") New Category
        table(class='table-fixed mt-8 border-separate border border-green-800', id="articleTable")
          thead
            tr
              th(class='w-1/4 border border-green-600') name
              th(class='w-1/4 border border-green-600') Created At
              th(class='w-1/4 border border-green-600') Operations
          tbody
            //- Will be filled

