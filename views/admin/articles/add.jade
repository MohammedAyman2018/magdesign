doctype html
html(lang="en")
  head
    include ../../includes/head_content.jade
    link(rel="stylesheet", href="/stylesheets/main.css")
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
    title Add Article
  body 
    include ../../includes/navbar_content.jade
    div(class="parent mt-10")
      div(class="container")
        a(href="/admin/articles") 
          i.ri-arrow-left-line
        form#articleForm(onsubmit="null") 
          div(class='mb-4')
            label(class='block text-gray-700 text-sm font-bold mb-2' for='title')
              | Title
            input#title(name="title" class='shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' type='text' placeholder='Article Title')
          div(class='mb-4')
            label(class='block text-gray-700 text-sm font-bold mb-2' for='body')
              | body
            div#editor
          div(class='mb-4')
            label(class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='categories')
              | Categories
            div(class='relative')
              select#categories(name="category" class='block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500')
                // will be filled
              div(class='pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700')
                svg(class='fill-current h-4 w-4' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20')
                  path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
          div(class='mb-4')
            label(class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='categories')
              | Article Image
            input#image(type="file" accept="image/*"  name="article-img")
        button#postArticle(class="py-2 px-4 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-700 focus:outline-none") Add Article

    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    script(src="/javascripts/addArticle.js") 

